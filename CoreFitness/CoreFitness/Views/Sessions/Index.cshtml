@model IEnumerable<CoreFitness.Models.Session>

@{
    ViewBag.Title = "Index";
}

    <div class="container">
        <h1 class="text-center">Timetable</h1>
        <p>
            <a asp-action="Create" class="btn btn-primary m-1"><i class="fas fa-plus"></i> Session</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Class
                    </th>
                    <th>
                        Instructor
                    </th>
                    <th>
                        Day
                    </th>
                    <th>
                        Session Start
                    </th>
                    <th>
                        Session End
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstructorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SessionStartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SessionEndTime)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.Id" class="m-1"><i class="fas fa-pencil-alt text-success"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="m-1"> <i class="fas fa-trash-alt text-danger"></i></a>
                        <a class="btn btn-primary m-1" href="#">Book</a>*@
                        <a asp-controller="Booking" asp-action="Create" asp-route-id="@item.ClassName" asp-route-username="@item.Id">Book</a>
                    </td>
                </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No sessions available at the current time</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
