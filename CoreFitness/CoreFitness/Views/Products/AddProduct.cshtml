
@model ProductAddViewModel


@{
    ViewBag.Title = "AddProduct";
}


    <div class="container">
        <form enctype="multipart/form-data" asp-controller="products" asp-action="addproduct" class="mt-3">

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Availability" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Availability" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<Availability>()">
                        <option value="Please Select"></option>
                    </select>
                    <span class="text-danger" asp-validation-for="Availability"></span>

                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input" >
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary text-center">Create</button>
                </div>
            </div>


            @*This script is required to display the selected file in the file upload element*@
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }

        </form>

    </div>