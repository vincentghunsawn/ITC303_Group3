
@model IEnumerable<CoreFitness.Models.Product>



@{
    ViewBag.Title = "Index";
}


    <div class="container" style="margin-top: 10px;">

        <form asp-controller="products" asp-action="SearchProduct">
            <div class="input-group md-form form-sm form-1 pl-0">
                <div class="input-group-prepend">
                    <span class="input-group-text cyan lighten-2" id="basic-text1">
                        <i class="fas fa-search text-white"
                           aria-hidden="true"></i>
                    </span>
                </div>
                <input class="form-control my-0 py-1" type="text" placeholder="Search" aria-label="Search" name="SearchString">
            </div>
        </form>

        <a asp-controller="products" asp-action="addproduct" class="btn btn-primary m-1"><i class="fas fa-plus"></i> Product</a>

        <div class="card-deck">

            @foreach (var product in Model)
            {

                var photoPath = "~/Images/" + (product.ImageURL ?? "showcase.jpg");

                var myModal = "modal" + product.Id;



                <div class="col-sm-12 col-md-4">

                    <div class="card m-3" style="min-width: 18rem;max-width:30.5%;">

                        <a asp-controller="products" asp-action="productdetails" asp-route-id="@product.Id">
                            <img src="@photoPath" class="card-img-top image-thumbnail productImage" asp-append-version="true" alt="Image" />
                        </a>

                        <div>
                            <h3 class="card-title">@product.Name</h3>
                            <h3>@product.Price</h3>

                            <a asp-controller="products" asp-action="editproduct" asp-route-id="@product.Id" class="m-1 text-success">
                                <i class="fas fa-pencil-alt"></i>
                            </a>

                            <a asp-controller="products" asp-action="deleteproduct" asp-route-id="@product.Id"
                               onclick="return confirm('Are you sure you want to delete this product?')">
                                <i class="fas fa-trash-alt text-danger"></i>
                            </a>
                        </div>
                    </div>
                </div>

            }



        </div>
    </div>

